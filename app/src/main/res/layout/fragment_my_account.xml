<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context=".my_account.MyAccountFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:elevation="20dp"
        android:background="@drawable/myacc_color">



        <ImageView
            android:id="@+id/profile_pic"
            android:layout_width="wrap_content"
            android:background="@drawable/round_back"
            android:layout_marginLeft="30dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:src="@drawable/ic_person_black_60dp" />

        <TextView
            android:id="@+id/text_pic"
            android:elevation="20dp"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textColor="#000000"
            android:fontFamily="@font/psr"
            android:layout_height="wrap_content"

            android:layout_marginLeft="150dp"
            android:layout_marginTop="50dp"

            android:text="NAME"
            android:textSize="36dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"

            android:fontFamily="@font/psr"
            android:text="VIEW AND EDIT PROFILE"
            android:textColor="#0000ff"
            android:layout_below="@id/text_pic"
            android:id="@+id/id_viewProfile"

            android:layout_marginLeft="140dp"
            android:padding="10dp"/>
    </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:background="@drawable/round_back"

            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                android:src="@drawable/ic_email_black_24dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:fontFamily="@font/psr"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="40dp"
                android:textSize="20dp"
                android:text="abc@xyz.com"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/round_back"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:paddingBottom="10dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_phone_black_24dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1234567890"
                android:layout_marginTop="15dp"
                android:textSize="20dp"
                android:fontFamily="@font/psr"
                android:paddingBottom="10dp"
                android:layout_marginLeft="40dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@drawable/round_back"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginRight="15dp"

            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:paddingBottom="10dp"
                android:layout_marginTop="15dp"

                android:src="@drawable/ic_settings_black_24dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:paddingBottom="10dp"
                android:fontFamily="@font/psr"
                android:layout_marginTop="15dp"
                android:clickable="true"
                android:layout_marginLeft="42dp"
                android:textSize="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:clickable="true"
            android:layout_marginLeft="15dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/round_back"
            android:id="@+id/id_help"

            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:src="@drawable/ic_supervisor_account_black_24dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="30dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:fontFamily="@font/psr"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:text="Help"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="40dp"
                android:textSize="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/And"
                android:fontFamily="@font/psr"
                android:layout_marginTop="15dp"
                android:paddingBottom="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:fontFamily="@font/psr"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:layout_marginTop="15dp"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                android:text="Support"/>

        </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:background="@drawable/round_button_red"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:id="@+id/logout_user"
            android:padding="10dp"
            android:text="log out"
            android:layout_height="wrap_content" />






</LinearLayout>




